    <div id="agenda-modal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Adicionar Novo Item à Agenda</h3>
                <button class="close-modal-btn">&times;</button>
            </div>
            <div class="modal-body">
                  <div class="form-group">
                        <label for="agenda-icon" class="input-label">Ícone do Evento:</label>
                        <select id="agenda-icon" class="input-field">
                            <option value="fa-users" selected>Reunião / Pessoas</option>
                            <option value="fa-handshake">Acordo / Visita</option>
                            <option value="fa-user-plus">Novo Usuário / Contratação</option>
                            <option value="fa-gavel">Conselho / Julgamento</option>
                            <option value="fa-calendar-alt">Calendário / Data</option>
                            <option value="fa-bell">Alerta / Notificação</option>
                            <option value="fa-chalkboard-teacher">Aula / Professor</option>
                            <option value="fa-school">Escola / Instituição</option>
                            <option value="fa-clipboard">Tarefa / Anotação</option>
                            <option value="fa-chart-bar">Relatório / Estatística</option>
                            </select>
                    </div>
                <form id="add-agenda-form">
                    <div class="form-group">
                        <label for="agenda-title" class="input-label">Título do Evento:</label>
                        <input type="text" id="agenda-title" class="input-field" required>
                    </div>
                    <div class="form-group">
                        <label for="agenda-time" class="input-label">Horário:</label>
                        <input type="time" id="agenda-time" class="input-field" required>
                    </div>
                    <div class="form-group">
                        <label for="agenda-description" class="input-label">Descrição/Local:</label>
                        <textarea id="agenda-description" class="textarea-field" rows="3"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn-action">Adicionar</button>
                        <button type="button" class="btn-detail close-modal-btn">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
