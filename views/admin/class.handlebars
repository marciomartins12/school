<head>
    <link rel="stylesheet" href="/css/admin/dashboard.css">
    <link rel="stylesheet" href="/css/admin/studentAndTeacher.css">
    <link rel="stylesheet" href="/css/admin/class.css">
</head>

<header class="navbar">
    <div class="navbar-left">
        <span class="system-name">Sistema Escolar</span>
        <span class="admin-area">Área Administrativa</span>
    </div>
    <div class="navbar-right">
        <div class="user-profile">
            <span>Dona Admin</span>
        </div>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>

    </div>
</header>
<div class="main-content">
    <h3>Gerenciamento de Turmas</h3>

    <div id="panel-students" class="tab-content active">

        <div class="tabs-list" role="tablist" aria-label="Navegação do Painel Administrativo">
            <a href="/admin/" class="tab-button " id="tab-overview" role="tab" aria-selected="true"
                aria-controls="panel-overview">Visão Geral</a>
            <a href="/admin/teacher" class="tab-button" id="tab-students" role="tab" aria-selected="false"
                aria-controls="panel-students">Alunos</a>
            <a href="/admin/teacher" class="tab-button" id="tab-teachers" role="tab" aria-selected="false"
                aria-controls="panel-teachers">Professores</a>
            <a href="#" class="tab-button active" id="tab-classes" role="tab" aria-selected="false"
                aria-controls="panel-classes">Turmas</a>
            <a href="/admin/events" class="tab-button" id="tab-events" role="tab" aria-selected="false"
                aria-controls="panel-events">Eventos</a>
            <a href="/admin/repots" class="tab-button" id="tab-reports" role="tab" aria-selected="false"
                aria-controls="panel-reports">Relatórios</a>
            <a href="/admin/settings" class="tab-button" id="tab-settings" role="tab" aria-selected="false"
                aria-controls="panel-settings">Configurações</a>
        </div>
        <section class="overview-cards student-overview-cards">
            <div class="card total-students">
                <div class="card-header">
                    <span>Total de Turmas</span>
                    <i class="fas fa-user-graduate icon"></i>
                </div>
                <div class="card-body">
                    <span class="number">1.247</span>
                    <span class="detail">todas que foram cadastrados</span>
                </div>
            </div>
            <div class="card active-students">
                <div class="card-header">
                    <span>Ativos</span>
                    <i class="fas fa-check-circle icon" style="color: var(--success-color);"></i>
                </div>
                <div class="card-body">
                    <span class="number">1</span>
                    <span class="detail"></span>
                </div>
            </div>

            <div class="card general-average">
                <div class="card-header">
                    <span>click aqui para adicionar Turma</span>
                    <i class="fas fa-plus icon"></i>
                </div>
                <div>
                    <span class="number"><button id="novo-aluno-btn" class="btn-primary">
                            <i class="fas fa-plus-circle"></i> Nova Turma
                        </button>
                    </span>
                </div>
            </div>
        </section>

       <div class="filters-section card">
            <h3>Filtros</h3>
            <p>Filtre e busque Turmas</p>
            <div class="filter-controls">
                

                <select class="input-field filter-select">
                    <option value="">Todas as turmas</option>
                    <option value="3A">3º A</option>
                    <option value="2B">2º B</option>
                    <option value="1C">1º C</option>
                </select>

                <button class="btn-primary search-button">
                    <i class="fas fa-search"></i> Buscar
                </button>
            </div>
        </div>
    </div>

    <div class="classes-list-section">
        <div class="class-item card">
            <div class="class-header">
                <h3 class="class-title">3º Ano A</h3>
                <span class="class-tag tag-period">Manhã</span>
                <span class="class-tag tag-level">Ensino Médio</span>
                <div class="class-actions">
                    
                    <button class="btn-icon"><i class="fas fa-edit"></i></button>
                    <a href="#" class="btn-icon"><i class="fas fa-trash-alt"></i></a>
                </div>
            </div>
            <div class="class-details">
                <div class="detail-group">
                    <i class="fas fa-user-graduate"></i>
                    <span class="detail-text">28/35 alunos</span>
                </div>
                <div class="detail-group">
                    <i class="fas fa-map-marker-alt"></i>
                    <span class="detail-text">Sala 12</span>
                </div>
                <div class="detail-group">
                    <i class="fas fa-clock"></i>
                    <span class="detail-text">07:30 - 12:00</span>
                </div>
            </div>
            <div class="class-coordinator">
                <span class="coordinator-label">Coordenador:</span>
                <span class="coordinator-name">Prof. Maria Santos</span>
            </div>
            <div class="class-disciplines">
                <span class="disciplines-label">Disciplinas:</span>
                <div class="discipline-tags">
                    <span class="discipline-tag">Matemática</span>
                    <span class="discipline-tag">Física</span>
                    <span class="discipline-tag">Química</span>
                    <span class="discipline-tag">Português</span>
                    <span class="discipline-tag">História</span>
                </div>
            </div>
            <div class="class-occupancy">
                <span class="occupancy-label">Ocupação: 91%</span>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 50%;"></div>
                </div>
            </div>
            <div class="class-footer">
                <button class="btn-primary">Gerenciar</button>
            </div>
        </div>
    </div>

    <div id="student-form-modal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="student-modal-title">Novo Aluno</h3>
                <button class="close-modal-btn">&times;</button>
            </div>
            <div class="modal-body">
                <form id="student-form">
                    <input type="hidden" id="student-id">

                    <div class="form-group">
                        <label for="student-dob" class="input-label">Data de Nascimento:</label>
                        <input required type="date" id="student-dob" class="input-field  styled-input">
                    </div>

                    <div class="form-group">
                        <label for="student-gender" class="input-label">Gênero:</label>
                        <select id="student-gender" class="input-field styled-input">
                            <option value="">Selecione</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                            <option value="Outro">Outro</option>
                            <option value="Prefere não dizer">Prefere não dizer</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="student-cpf" class="input-label">CPF do Aluno:</label>
                        <input required type="text" id="student-cpf" class="input-field styled-input">
                    </div>

                    <div class="form-group">
                        <label for="student-endereco" class="input-label">Endereço:</label>
                        <textarea id="student-endereco" class="input-field styled-input" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="student-necessidades" class="input-label">Necessidades Especiais:</label>
                        <textarea id="student-necessidades" class="input-field styled-input" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="student-mae" class="input-label">Nome da Mãe:</label>
                        <input required type="text" id="student-mae" class="input-field styled-input">
                    </div>

                    <div class="form-group">
                        <label for="student-pai" class="input-label">Nome do Pai:</label>
                        <input required type="text" id="student-pai" class="input-field styled-input">
                    </div>

                    <div class="form-group">
                        <label for="student-observacoes" class="input-label">Observações:</label>
                        <textarea id="student-observacoes" class="input-field styled-input" rows="3"></textarea>
                    </div>



                    <div class="form-group">
                        <label for="student-matricula" class="input-label">Data de Matrícula:</label>
                        <input required type="date" id="student-matricula" class="input-field styled-input">
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn-action" id="save-student-btn">Salvar</button>
                        <button type="button" class="btn-detail close-modal-btn">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/admin/student.js"></script>